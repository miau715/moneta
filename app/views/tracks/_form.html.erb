<input type="radio" name="type" value="outcome" class="type"> 支出
<input type="radio" name="type" value="income" class="type"> 收入
<br />
<%= f.select(:category_id, options_from_collection_for_select(@outcome_categories, :id, :name), {}, {:class => 'category_id outcome'}) %>
<%= f.select(:category_id, options_from_collection_for_select(@income_categories, :id, :name), {}, {:class => 'category_id income'}) %>
<br />
<%= f.label :price, "價格：" %>
<%= f.number_field :price %>
<br />
<%= f.label :description, "交易明細：" %>
<%= f.text_field :description %>
<br />

<% content_for :js do %>
$(document).ready(function() { 
  $('select.category_id').hide();
  $('input.type').click(function() {
    $('select.category_id').hide();
    if($(this).val()=='outcome') {
      $('select.outcome').show();
    }
    else {
      $('select.income').show();
    }
  });
});
<% end %>